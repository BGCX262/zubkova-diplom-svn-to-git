@model DogsClub.WebUI.Models.Authorization
<div id="home">
    <div class="overlay">
        <div class="container">
            <div class="row ">
                <div class="col-md-4 col-md-offset-4">
                    <div class="div-trans text-center Authorization">
                        <h3 class="HeadRegistration">Авторизация</h3>
                        @using (Html.BeginForm("Login", "Account"))
                        {
                            @Html.Hidden("ReturnUrl", ViewData["string ReturnUrl"])
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @class = "form-control textAutor", @required = "required", @placeholder = "Электронный адрес" } })
                                    @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control textAutor", @required = "required", @placeholder = "Пароль" } })
                                </div>
                                @Html.ActionLink("Регистрация", "Registration", "Account", new { @class = "LinkRegistration" })
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-block btn-lg">Войти</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>

    </script>
    
}
