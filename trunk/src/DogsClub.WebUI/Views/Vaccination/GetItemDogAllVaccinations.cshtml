@model IEnumerable<DogsClub.WebUI.Models.Vaccination>
@{
    Layout = "~\\Views\\Shared\\_Layout4.cshtml";
}
<div>
    <div class="ConteinerAddExposition">
        @Html.Action("Add", "Vaccination")
    </div>
    <div class="ConteinerGetAllExposition">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Название")
                </th>
                <th>
                    @Html.DisplayName("Дата")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(id =>item.Id)
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateVacination)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit",  new { idVaccionation = item.Id }) |
                        @Html.ActionLink("Удалить", "Remove", new { idVaccionation = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>