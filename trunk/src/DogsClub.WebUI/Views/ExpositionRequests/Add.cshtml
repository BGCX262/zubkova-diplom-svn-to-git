@model DogsClub.WebUI.Models.ExpositionRequest
@{
    //Layout = "~\\Views\\Shared\\_Layout5.cshtml";

    List<SelectListItem> IsDog = new List<SelectListItem>();
    if (ViewData["Dogs"] != null)
    {
        var a = ViewData["Dogs"] as IEnumerable<DogsClub.WebUI.Models.Dog>;
        if (a != null)
        {
            IsDog.AddRange(a.Select(t => new SelectListItem() { Text = t.Name, Value = t.Id.ToString() }));
        }
    }

}

<div id="home">
    <div class="overlay">
        <div class="container">
            <div class="row ">
                <div class="col-md-4 col-md-offset-4">
                    <div class="div-trans text-center Registracya addRequests">
                        <h3 class="HeadRegistration">Оформление заявки</h3>
                        @using (Html.BeginForm("Add", "ExpositionRequests", FormMethod.Post))
                        {
                            @Html.Hidden("IdExposition", ViewData["idExposition"])
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    @Html.DropDownList("IdDog", IsDog, new { @class = "form-control textAutor newtextAutor", @required = "required", @placeholder = "Выберите питомца" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-block btn-lg">Участвовать</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



