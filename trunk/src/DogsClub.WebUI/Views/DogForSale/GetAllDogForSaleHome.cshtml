@model List<DogsClub.WebUI.Models.DogForSale>
@{
    Layout = "~\\Views\\Shared\\_Layout5.cshtml";
}
<div class="HeaderDodType">ПИТОМЦЫ</div>
<div class="ConteinerDogForSale">
    @if (Model.Count == 0) 
    {
        <div>Питомцы для продажи отсутствуют</div>
    }
    else
    {
        
        foreach (var item in Model)
        {
            <div class="itemDogForSale">
                <div class="ImageUser3">
                    <div id="AvatarPersonal2">
                        <img src="@Url.Action("GetDogsAvatar", "Images", new { IdDog = item.GetDog.Id })" width="118" height="120" />
                    </div>
                </div>
                <div>
                    <div class="poleNameDogForSale fontWeight">@item.GetDog.Name</div>
                    <div class="poleNameDogForSale">@item.GetDog.GetSex</div>
                    <div class="poleNameDogForSale">@item.Price</div>
                    @Html.ActionLink("Подробнее", "FullShowItemDogForSale", "DogForSale", new { IdDog = item.GetDog.Id }, new { @class = "poleNameDogForSale colorLink" })
                </div>
            </div>            
        }
    }
</div>

