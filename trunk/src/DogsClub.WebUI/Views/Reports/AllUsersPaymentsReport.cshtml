@model List<DogsClub.WebUI.Models.Payment>
@{
    Layout = "~\\Views\\Shared\\_Layout4.cshtml";
    DateTime startPeriod = (DateTime)ViewData["startPeriod"];
    DateTime endPeriod = (DateTime)ViewData["endPeriod"];
}
<link href="~/Content/themes/base/theme.css" rel="stylesheet" />
<link href="~/Content/themes/base/core.css" rel="stylesheet" />
<link href="~/Content/themes/base/accordion.css" rel="stylesheet" />

<link href="~/Content/DataTables-1.10.4/css/jquery.dataTables.css" rel="stylesheet" />
<div class="ConteinerReportVaccination">
    <div class="FormReportVaccination">
        <span class="headerWer">Платежи всех участников клуба за период </span>c @startPeriod.ToLongDateString() по @endPeriod.ToLongDateString()
    </div>
    <div class="graphic-wrap">
        <table class="table table-hover" id="tableReport">
            <thead>
                <tr>
                    <th class="ZagName">
                        Дата платежа
                    </th>
                    <th class="ZagName">
                        Тип платежа
                    </th>
                    <th class="ZagName">
                        Размер платежа
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ZagValue2">@item.PayDate</td>
                        <td class="ZagValue2">@item.GetType.Name</td>
                        <td class="ZagValue2">@item.PaySize</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

@section script {
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script>
        $(document).ready(function () {
            $("#accordion").accordion();
        });
    </script>
}
