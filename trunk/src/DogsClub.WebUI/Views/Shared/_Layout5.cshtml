<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Клуб собаководов</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PatternBootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/PatternBootstrap/style.css" rel="stylesheet" />
    <link href="~/Content/Mystyle.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top move-me ">
        <div class="ConteinerAuthorization">
            <div>@Html.Action("UserStatus", "Account")</div>
            @Html.Action("UserInfo", "User")
        </div>
        <div class="container">
            <div class="navbar-collapse collapse move-me">
                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.HomeNavigationLink("Домашняя", "Index", "Home")</li>
                    <li>@Html.HomeNavigationLink("Продажа", "GetAllDogForSaleHome", "DogForSale")</li>
                    <li> @Html.HomeNavigationLink("Галерея", "GaleryPhoto", "Images")</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="home">
        <div class="overlay">
            <div class="container">
                <div class="row">
                    <div class="div-trans text-center homeIndex">
                        <div class="col-md-9">
                            @RenderBody()
                        </div>
                        <div class="col-md-3 containerTop">
                            <div class="ConteinerSearchForm">
                               @using (Html.BeginForm("Search", "Account", FormMethod.Get, new { @class = "navbar-form navbar-left", @role = "search" }))
                               {
                                <div class="form-group">
                                    @Html.TextBox("valueString", null, new {@class="form-control", @placeholder="ФИО или Имя питомца"})
                                </div>
                                <button type="submit" class="btn btn-default knopka_Search">Поиск</button>
                               }                                
                            </div>
                            <div class="ConteinerTop">
                                <div>
                                    @Html.Action("TopUser", "User")
                                </div>
                                <div>
                                    @Html.Action("TopDog", "Dogs")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footser-end">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    &copy; 2015 <a href="#" style="color:#fff;" target="_blank">Елена Тукпанова</a>
                </div>
            </div>

        </div>
    </div>
    <script src="~/Scripts/PatternBootstrap/jquery-1.10.2.js"></script>
    <script src="~/Scripts/PatternBootstrap/bootstrap.js"></script>
    <script src="~/Scripts/PatternBootstrap/wow.min.js"></script>
    <script src="~/Scripts/PatternBootstrap/jquery.easing.min.js"></script>
    <script src="~/Scripts/PatternBootstrap/jquery.prettyPhoto.js"></script>
    <script src="~/Scripts/PatternBootstrap/custom.js"></script>
    @RenderSection("script", false)
</body>
</html> 